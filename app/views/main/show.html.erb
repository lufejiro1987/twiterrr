<div class="tweet" id="tweet-<%= @tweet.id %>%">
  <p><%= image_tag @tweet.user.profile_img_url, class: 'user-thumb' %> <%= @tweet.user.email %></p>
  <div class="content">
    <%= @tweet.content %>
  </div>
  <% if !@tweet.original.nil? %>
    <p><em><%= link_to 'Ver tweet original', show_path(tweet: @tweet.id)%></em></p>
  <% end %>
  <p><%= time_ago_in_words @tweet.created_at %> | <strong>Likes:</strong> <%= @tweet.likes.count %> | <strong>Retweets:</strong> <%= @tweet.retweets.blank? ? 0 : @tweet.retweets %></p>
  <div class="likes">
    <% @tweet.likes.each do |like| %>
    <%= image_tag like.user.profile_img_url, class: 'small-list', title: like.user.email %>
    <% end %>
  </div>
</div>
